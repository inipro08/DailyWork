<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomProgressBar">
        <attr name="foreground_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="color" format="color" />
        <attr name="alpha" format="float" />
    </declare-styleable>

    <declare-styleable name="CustomTaskInfoWidget">
        <attr name="showDetail" format="boolean" />
        <attr name="showLine" format="boolean" />
        <attr name="showTextValue" format="boolean" />
        <attr name="goneWhenEmpty" format="boolean" />
        <attr name="iconSize" format="dimension" />
        <attr name="placeholder" format="string" />
        <attr name="iconLeft" format="reference" />
        <attr name="showBorderWhenHaveValue" format="boolean" />
        <attr name="changeIconActive" format="boolean"></attr>
    </declare-styleable>

    <style name="TitleToolbar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/san_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <declare-styleable name="CustomItemMoreView">
        <attr name="text" format="string" />
        <attr name="iconL" format="reference" />
    </declare-styleable>

    <declare-styleable name="TimelineView" >
        <attr name="markerColor" format="color|reference"/>
        <attr name="lineColor" format="color|reference"/>
        <attr name="markerSize" format="dimension"/>
        <attr name="markerStrokeWidth" format="dimension"/>
        <attr name="markerActiveColor" format="color|reference"/>
        <attr name="markerActiveStrokeWidth" format="dimension"/>
        <attr name="lineSize" format="dimension"/>
        <attr name="markerTextSize" format="dimension"/>
        <attr name="markerTextColor" format="color|reference"/>
        <attr name="markerActive" format="boolean"/>
        <attr name="lineOrientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>