<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/splash_loading</item>
        <item name="colorPrimaryVariant">@color/home_background</item>
        <item name="colorOnPrimary">@color/home_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorControlHighlight">#2CF0CEF8</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="base">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/san_regular</item>
    </style>

    <style name="custom.text.group" parent="base">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="custom.text.content" parent="base">
        <item name="android:textColor">@color/text2</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/san_semibold</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text1</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheet.SearchBox" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">@dimen/sp_14</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/text1</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/text2</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/text2</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>
</resources>